#!/bin/bash

if [[ $# -ne 1 ]] && [[ $# -ne 2 ]]; then
  echo "Usage: $(basename "$0") suffix [inputFile]"
  exit 0
fi

SUFFIX=$1

if [[ $# -eq 1 ]]; then
  INFILE=/dev/stdin
else
  INFILE=$2
  if ! test -r "$INFILE" -a -f "$INFILE"; then
    echo "Input file $INFILE is not readable." >&2
    exit 1
  fi
fi

while IFS='' read -r line; do
  echo "${line}$SUFFIX"
done <"$INFILE"
